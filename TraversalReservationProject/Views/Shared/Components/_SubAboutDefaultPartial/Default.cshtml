@using Entity.Concrete
@model List<SubAbout>
<section class="w3l-bottom py-5">
    <div class="container py-md-4 py-3 text-center">
        <div class="row my-lg-4 mt-4">
            <div class="col-lg-9 col-md-10 ml-auto">
                <div class="bottom-info ml-auto">
                    <div class="header-section text-left">
                        @foreach(var item in Model)
                        {
                            <h1 class="hny-title two">@item.MainTitle</h1>
                            <h3 class="hny-title two">@item.SubTitle</h3>
                            <p class="mt-3 pr-lg-5">
                                @item.Description
                            </p>
                        }                    

                        <a href="/Default/Index/" class="btn btn-style btn-secondary mt-5">Daha Fazla</a>
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>