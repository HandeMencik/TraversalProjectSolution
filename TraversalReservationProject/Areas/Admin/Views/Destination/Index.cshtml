@model List<Entity.Concrete.Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationId</td>  
            <td>@item.City</td>
            <td>@item.Price</td> 
            <td>@item.Capacity</td>
            <td><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-info">Sitede Gör</a></td>
            <td><a href="/Admin/Destination/Delete/@item.DestinationId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Destination/Update/@item.DestinationId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Destination/Add" class="btn btn-outline-primary">Yeni Rota Ekle</a>

